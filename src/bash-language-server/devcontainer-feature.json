{
  "$help": "https://containers.dev/implementors/features",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainerFeature.schema.json",
  "containerEnv": {
    "NODE_PATH": "/opt/bash-language-server/node_modules:${NODE_PATH}",
    "PATH": "/opt/bash-language-server/node_modules/.bin:${PATH}"
  },
  "customizations": {
    "devpp": {
      "mounts": [
        {
          "sharing": "locked",
          "target": "/root/.npm/",
          "type": "cache"
        }
      ]
    },
    "vscode": {
      "extensions": ["mads-hartmann.bash-ide-vscode"],
      "settings": {}
    }
  },
  "description": "A language server for Bash",
  "documentationURL": "https://github.com/bash-lsp/bash-language-server",
  "id": "bash-language-server",
  "installsAfter": ["./features/src/node/"],
  "name": "Bash Language Server (via npm)",
  "options": {
    "version": {
      "default": "5.6.0",
      "description": "https://npmjs.com/package/bash-language-server?activeTab=versions",
      "proposals": ["5.6.0"],
      "type": "string"
    }
  },
  "version": "0.0.0"
}
