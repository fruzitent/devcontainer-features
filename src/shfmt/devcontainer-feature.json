{
  "$help": "https://containers.dev/implementors/features",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainerFeature.schema.json",
  "containerEnv": {
    "PATH": "/opt/shfmt/bin:${PATH}"
  },
  "customizations": {
    "devpp": {
      "mounts": [
        {
          "sharing": "locked",
          "target": "/tmp/shfmt/",
          "type": "cache"
        }
      ]
    },
    "vscode": {
      "extensions": ["mkhl.shfmt"],
      "settings": {
        "[shellscript]": { "editor.defaultFormatter": "mkhl.shfmt" }
      }
    }
  },
  "description": "A shell parser, formatter, and interpreter with bash support; includes shfmt",
  "documentationURL": "https://github.com/mvdan/sh",
  "id": "shfmt",
  "installsAfter": ["./features/src/common-utils/"],
  "name": "shfmt (via GitHub Releases)",
  "options": {
    "version": {
      "default": "v3.12.0",
      "description": "https://github.com/mvdan/sh/releases",
      "proposals": ["v3.12.0"],
      "type": "string"
    }
  },
  "version": "0.0.0"
}
